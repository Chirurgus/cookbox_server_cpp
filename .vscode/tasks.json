{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "/usr/bin/cmake -G \"UNIX Makefiles\" ${workspaceRoot}",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CMake with g++",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake .. -DCMAKE_CXX_COMPILER=g++, -G 'Unix Makefiles'",
            "group": {
              "kind": "build",
              "isDefault": true
            }
          }     
    ]
}